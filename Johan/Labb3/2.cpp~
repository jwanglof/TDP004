#include <iostream>
#include <fstream>
#include <string>
using namespace std;

bool fileExist(string fileName)
{
  ifstream inFile;
  inFile.open(fileName.c_str(), fstream::in);

  if (inFile.good())
  {
    inFile.close();
    return true;
  }
  else
    return false;
}

int main()
{
  string fileName;
  string askedWord;

  cout << "What file do you want to open?" << endl;
  cin >> fileName;

  if (fileExist(fileName))
  {
    cout << "What word do you want to look for?" << endl;
    cin >> askedWord;
  }
  else
  {
    cout << "The file does not exist." << endl;
  }

  return 0;
}
